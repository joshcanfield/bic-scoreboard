{
  "name": "@canfield/bia-ui",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript workspace for the Bremerton Ice Arena control UI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run test && npm run typecheck",
    "generate:types": "openapi-typescript ../../openapi/game.yaml --output src/api/game.types.ts"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@types/node": "^20.14.12",
    "jsdom": "^24.1.0",
    "@vitest/ui": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "openapi-typescript": "^7.4.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.6",
    "vitest": "^2.1.1"
  }
}
